<?xml version="1.0"?>
<skin name="bubble_pointer_down_skin" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset" value="habbo_bitmap_skin2_png" type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->

	<states>
        <state name="default" layout="pointer_down" template="default_pointer_down" />
	</states>

	<!-- templates defines regions in bitmap asset -->
	
	<templates>
        <template name="default_pointer_down" asset="$asset">
			<entities>
                <entity name="pointer" type="bitmap"><region><Rectangle x="81" y="200" width="7" height="6" /></region></entity>
            </entities>
		</template>
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
        <layout name="pointer_down" transparent="true">
			<entities>
                <entity name="pointer"><region><Rectangle x="0" y="0" width="7" height="6" /></region><scale horizontal="center" vertical="fixed" /></entity>
            </entities>
		</layout>
	</layouts>
</skin>